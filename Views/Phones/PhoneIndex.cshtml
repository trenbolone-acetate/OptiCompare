@model IEnumerable<OptiCompare.Models.Phone>
@{
    ViewData["Title"] = "Phone's List";
}
<head>
    <link rel="stylesheet" href="~/css/PhoneIndex.css" asp-append-version="true" />
</head>
<h1 class="phnsLstH1">Phones list</h1>
<form class="search-form" method="get" asp-controller="Phones" asp-action="PhoneIndex" style="margin-left: auto;">
    <input list="phones" autocomplete="on" class="form-control" type="text" placeholder="Search for..." name="SearchString" value="@ViewData["CurrentFilter"]" aria-label="Search" aria-describedby="btnNavbarSearch"/>
    <input type="submit" value="Search" class="btn btn-secondary form-control-bttn"/>
</form>
<a class="creation" style="width:20%;font-size:large;" asp-action="Create">Create New</a>
<table class="table">
    <thead>
    <tr>
        <th>Phone</th>
        <th>5G?</th>
        <th>Display size</th>
        <th>Display resolution</th>
        <th>Display type</th>
        <th>Operating System</th>
        <th>Storage</th>
        <th>Main Camera</th>
        <th>Battery capacity</th>
        <th>Price</th>
        <th colspan="3">Utility</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.modelName</th>
            <td>@(item.hasNetwork5GBands ? "Yes" : "No")</td>
            <td>@item.DisplayDetails.displaySize</td>
            <td>@item.DisplayDetails.displayResolution</td>
            <td>@item.DisplayDetails.displayType</td>
            <td>@item.PlatformDetails.Os</td>
            <td>@item.storage</td>
            <td>@item.CameraDetails.mainCameraDetails</td>
            <td>@item.BatteryDetails.batteryCapacity</td>
            <td>@item.price</td>
            <td><a style="color:#d8d8d8" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
            <td style="background-color: #2455a7"><a style="color:lightblue" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
            <td style="background-color: #ffb3ba"><a style="color:red" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
        </tr>
    }
    </tbody>
</table>

<datalist id="phones">
    @foreach (var phone in Model)
    {
        <option>@phone.modelName</option>
    }
</datalist>
